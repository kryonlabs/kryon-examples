# Test TabBar Positions
# Simple test without components

@include "widgets/tabbar.kry"

# Style for column layout (vertical stacking)
style "column_app" {
    background_color: "#191919FF"
    text_color: "#FFFFFFFF"
    display: flex
    flex_direction: column
    align_items: start
}

# Style for row layout (horizontal stacking)
style "row_app" {
    background_color: "#191919FF"
    text_color: "#FFFFFFFF"
    display: flex
    flex_direction: row
    align_items: start
}

style "red_box" {
    background_color: "#FF0000FF"
    width: 900
    height: 100
}

style "green_box" {
    background_color: "#00FF00FF"
    width: 900
    height: 100
}

App {
    window_width: 900
    window_height: 200
    window_title: "TabBar Position Test"
    style: "column_app"
    
    # Red box should be at top
    Container {
        style: "red_box"
        Text {
            text: "TOP (Red)"
            text_alignment: center
        }
    }
    
    # Green box should be at bottom
    Container {
        style: "green_box"
        Text {
            text: "BOTTOM (Green)"
            text_alignment: center
        }
    }
}